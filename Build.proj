<Project>
  <Target Name="Build">
    <Exec Command="dotnet build $(Solution)/$(Solution).csproj" />
  </Target>

  <Target Name="Run">
    <Exec Command="dotnet run --project $(Solution)/$(Solution).csproj" />
  </Target>

  <Target Name="Test">
    <Exec Command="dotnet test $(Solution).Tests/$(Solution).Tests.csproj" />
  </Target>
</Project>
